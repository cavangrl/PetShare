<div id="dogShow">

<p id="notice"><%= notice %></p>

<p>
  <strong>Pic:</strong>
  <%= image_tag @dog.avatar.url(:thumb) %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @dog.breed %>
</p>
<p>
  <strong>Full Time:</strong>
  <%= @dog.full_time %>
</p>
<p>
  <strong>Insurance:</strong>
  <%= @dog.insurance %>
</p>
<p>
  <strong>Age:</strong>
  <%= @dog.age %>
</p>
<p>
  <strong>Doggie Cam:</strong>
  <%= @dog.doggie_cam %>
</p>
<p>
  <strong>Solo Care:</strong>
  <%= @dog.solo_care %>
</p>

<p>
  <strong>Medical status:</strong>
  <%= @dog.medical_status %>
</p>

<h3> Top Dog Sitters Based on Your Results </h3>


<% if @dog.sitters.any? %>
    <ul>
    <% @dog.sitters.each do |sitter| %>
    <li><%= link_to "#{sitter.first_name}  ""#{sitter.last_name}" , sitter_path(sitter.id)%> | <%=image_tag sitter.avatar.url(:thumb) %><%= "About: #{sitter.summary}"%> </li>
    <% end %>
    <br/>
    </ul>
<% else %> 
    <%= "Sorry we could not find any Sitters based on your search results" %> </div></br> 
<% end %>   
<%= link_to "Back", user_dogs_path(current_user.id)%>

</div>





