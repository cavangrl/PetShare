<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
      <th>Email&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
      <th>Message&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact.each do |contact| %>
      <tr>
        <td><%= "Name:#{ contact.name}   "%></td>
        <td><%= "Email: #{contact.email}    " %></td>
        <td><%= "Message: #{contact.message}    " %></td>
        <td><%= link_to 'Home', root_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
